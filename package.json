{
  "name": "react-clamp",
  "version": "1.0.0",
  "description": "react text clamp component",
  "main": "dist/index.js",
  "module": "es/index.js",
  "types": "./index.d.ts",
  "keywords": [],
  "files": [
    "dist",
    "es",
    "src",
    "index.d.ts"
  ],
  "scripts": {
    "build": "rollup -c",
    "tslint": "tslint --fix --format codeFrame --project .",
    "dev": "poi --serve",
    "pub": "yarn tslint && yarn build && yarn publish --access=public",
    "test": "jest",
    "demo": "poi --prod"
  },
  "repository": {
    "url": "zwingz/react-clamp",
    "type": "git"
  },
  "author": "zwingz",
  "license": "MIT",
  "homepage": "",
  "bugs": {
    "url": ""
  },
  "peerDependencies": {
    "react": ">=16.0.0",
    "react-dom": ">=16.0.0"
  },
  "devDependencies": {
    "@poi/plugin-typescript": "^12.0.0",
    "@types/enzyme": "^3.1.15",
    "@types/enzyme-adapter-react-16": "^1.0.3",
    "@types/jest": "^24.0.22",
    "@types/node": "^12.12.6",
    "@types/react": "^16.9.11",
    "autoprefixer": "^9.7.1",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.15.1",
    "enzyme-to-json": "^3.4.3",
    "husky-tslint-pre-commit": "^1.0.2",
    "jest": "^24.1.0",
    "less": "^3.10.3",
    "less-loader": "^5.0.0",
    "poi": "^12.7.3",
    "react": "^16.11.0",
    "react-dom": "^16.11.0",
    "rollup": "^1.26.3",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-peer-deps-external": "^2.2.0",
    "rollup-plugin-postcss": "^2.0.3",
    "rollup-plugin-typescript": "^1.0.0",
    "ts-jest": "^24.1.0",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.15.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-react": "^4.1.0",
    "typescript": "^3.7.2"
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga|scss)$": "<rootDir>/test/utils.ts"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/test/setup.ts",
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/__test__/**"
    ],
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/__test__/*.test.(ts|tsx)"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  },
  "dependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "node node_modules/husky-tslint-pre-commit/pre-commit.js"
    }
  }
}
